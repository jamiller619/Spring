{
  "name": "spring",
  "version": "2.0.0",
  "description": "A minimal new tab page for Google Chrome",
  "repository": "https://github.com/jamiller619/spring.git",
  "author": "Jeff Miller",
  "license": "MIT",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dx": "yarn concurrently --n chrome,api \"yarn chrome:dx\" \"yarn api:dx\"",
    "api:dx": "yarn workspace @spring/api dx",
    "chrome:dx": "yarn workspace @spring/chrome dx",
    "build": "yarn workspace @spring/chrome build",
    "api:deploy": "deployctl deploy --env-file=.env",
    "release": "yarn chrome:build && deno run -A scripts/release.ts"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.6",
    "adm-zip": "^0.5.16",
    "concurrently": "^9.1.0",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
}
